FROM oven/bun:1.2-slim AS base

# This will be set by the GitHub action to the folder containing this component.
ARG FOLDER=/app

ENV NODE_ENV=development
#RUN bun install --global nuekit

COPY . /app
WORKDIR ${FOLDER}

RUN bunx nue -v

EXPOSE 3000/tcp
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["bunx nue"]
